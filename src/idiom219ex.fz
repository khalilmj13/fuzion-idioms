ex219 is

  s := "Hello         world"

  t := s.split.as_string " "
  say t

  # alternatively, using a monoid:
  filter_multi_space : Monoid String is
    redef infix âˆ™ (a, b String) => if b=" " && a.ends_with " " then a else a + b
    redef e => ""

  t := s.as_codepoint_sequence
        .map_sequence x->($x)
        .fold filter_multi_space
  say t

  # alternatively, using a loop
  for
    t := "", t + n
    c in s.as_codepoint_sequence
    n := if c = " " && t.ends_with c then "" else c
  else
    say t
